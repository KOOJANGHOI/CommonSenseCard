# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

# ITEMS
GET     /                           controllers.app.AppController.GETIndex()
GET     /api/items                  controllers.app.AppController.GETItemContentsHtml()
GET     /api/item/:item_id          controllers.app.AppController.GETItem(item_id: Int)

# USERS
POST    /api/user                   controllers.app.AppController.POSTLogin()
PATCH   /api/user/:user_id/rating   controllers.app.AppController.PATCHRating(user_id: Int)
